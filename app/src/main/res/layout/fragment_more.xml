<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragments.MoreFragment">

    <Button
        android:id="@+id/compare_month_button"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/purple_light"
        android:text="Compare \n Months"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/manage_categories_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/manage_categories_button"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:backgroundTint="@color/purple_light"
        android:text="Manage \n categories"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/compare_month_button"
        app:layout_constraintEnd_toStartOf="@+id/compare_month_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/compare_month_button" />


</androidx.constraintlayout.widget.ConstraintLayout>