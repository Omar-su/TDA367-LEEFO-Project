<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragments.MoreFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More options and tools"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/compare_month_button"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:text="Compare \n Months"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/manage_categories_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/manage_categories_button"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:text="Manage \n categories"
        app:layout_constraintBottom_toBottomOf="@+id/compare_month_button"
        app:layout_constraintEnd_toStartOf="@+id/compare_month_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/compare_month_button" />


</androidx.constraintlayout.widget.ConstraintLayout>