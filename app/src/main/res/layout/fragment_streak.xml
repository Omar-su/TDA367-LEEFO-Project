<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_streak"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="@+id/currentStreak"
        app:layout_constraintStart_toStartOf="@+id/streakImage"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <ImageView
        android:id="@+id/streakImage"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/currentStreak"
        app:layout_constraintEnd_toStartOf="@+id/currentStreak"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/longestStreak"
        app:layout_constraintTop_toTopOf="@+id/currentStreak"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lightning" />

    <TextView
        android:id="@+id/currentStreak"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginEnd="75dp"
        android:gravity="center|left"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/streakImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
        android:id="@+id/longestStreak"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginEnd="10dp"
        android:gravity="center|left"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/streakImage"
        app:layout_constraintEnd_toStartOf="@+id/streakImage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/longestStreakImage"
        app:layout_constraintTop_toTopOf="@+id/streakImage"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/longestStreakImage"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_marginStart="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/longestStreak"
        app:layout_constraintEnd_toStartOf="@+id/longestStreak"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/longestStreak"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fire" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record_streak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/longestStreak"
        app:layout_constraintStart_toStartOf="@+id/longestStreakImage"
        app:layout_constraintTop_toBottomOf="@+id/longestStreakImage"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>